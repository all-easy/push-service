<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="init" author="Denis Kartavenko" context="structure">
        <comment>Init first tables</comment>

        <createTable tableName="t_user">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="uid" type="varchar">
                <constraints unique="true"/>
            </column>
            <column name="username" type="varchar">
                <constraints unique="true"/>
            </column>
            <column name="password" type="varchar"/>
        </createTable>

        <createTable tableName="shape">
            <column name="room_token" type="varchar">
                <constraints nullable="false" primaryKey="true" primaryKeyName="shape_pk"/>
            </column>
            <column name="user_uid" type="varchar">
                <constraints nullable="false" primaryKey="true" primaryKeyName="shape_pk"/>
            </column>

            <column name="shape" type="varchar"/>
        </createTable>

        <createTable tableName="room">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="token" type="varchar">
                <constraints unique="true"/>
            </column>
            <column name="title" type="varchar"/>
        </createTable>

        <createTable tableName="room_t_user">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="room_token" type="varchar">
                <constraints nullable="false"
                             primaryKey="true"
                             foreignKeyName="room_t_user_token_fk"
                             primaryKeyName="room_t_user_pk"
                             references="room(token)"/>
            </column>
            <column name="t_user_uid" type="varchar">
                <constraints nullable="false"
                             primaryKey="true"
                             foreignKeyName="room_t_user_uid_fk"
                             primaryKeyName="room_t_user_pk"
                             references="t_user(uid)"/>
            </column>
            <column name="status" type="varchar"/>
        </createTable>

        <createTable tableName="expense">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar"/>

            <column name="from_uid" type="varchar">
                <constraints nullable="false" foreignKeyName="expense_from_t_user_fk" references="t_user(uid)"/>
            </column>

            <column name="to_uid" type="varchar">
                <constraints nullable="false" foreignKeyName="expense_to_t_user_fk" references="t_user(uid)"/>
            </column>

            <column name="room_token" type="varchar">
                <constraints nullable="false" foreignKeyName="expense_room_fk" references="room(token)"/>
            </column>

            <column name="datetime" type="datetime"/>
            <column name="amount" type="numeric"/>
        </createTable>



    </changeSet>

</databaseChangeLog>