<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="addCurrencyTable" author="Oleg">
        <createTable tableName="currency">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="code" type="varchar">
                <constraints unique="true"/>
            </column>

            <column name="symbol" type="varchar">
                <constraints unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="addFkToRoomTable" author="Oleg">
        <addColumn tableName="room">
            <column name="currency" type="varchar">
                <constraints nullable="true" foreignKeyName="currency" references="currency(code)"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="addCurrencyInitSqlScript" author="Oleg">
        <sqlFile path="add_currency.sql" relativeToChangelogFile="true" endDelimiter=";" splitStatements="true"/>
    </changeSet>
</databaseChangeLog>